<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/imagezxbj">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="#808000"
        android:orientation="horizontal">
    <ImageView
        android:id="@+id/menufh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/menufh"
        android:layout_gravity="center"/>
    <TextView
        android:id="@+id/aname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#808000"
        android:text="古兜"
        android:layout_gravity="center"
        android:textSize="30dp"
        android:layout_marginLeft="120dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="490dp">
        <ImageView
            android:id="@+id/aimg"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@mipmap/qq1"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:background="#808000"
            android:layout_marginLeft="5dp">
        <TextView
            android:id="@+id/ainfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:hint="吃好饭了吗，快点来打王者。"
            android:textSize="15dp"
            android:layout_marginLeft="10dp"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="140dp"
        android:background="#FFFFFF"
        android:layout_marginTop="25dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <EditText
            android:layout_width="280dp"
            android:layout_height="50dp"
            android:background="#C0C0C0"/>
        <Button
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:text="发送"
            android:background="#7EE2AB"
            android:layout_marginLeft="5dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="52dp"
                android:layout_height="35dp"
                android:src="@drawable/menumai"
                android:layout_marginTop="3dp"/>
            <ImageView
                android:layout_width="52dp"
                android:layout_height="40dp"
                android:src="@drawable/menuxc"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="10dp"/>
            <ImageView
                android:layout_width="52dp"
                android:layout_height="40dp"
                android:src="@drawable/menuxj"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="10dp"/>
            <ImageView
                android:layout_width="52dp"
                android:layout_height="40dp"
                android:src="@drawable/menuhb"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="10dp"/>
            <ImageView
                android:layout_width="52dp"
                android:layout_height="40dp"
                android:src="@drawable/menubq"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="10dp"/>
            <ImageView
                android:layout_width="55dp"
                android:layout_height="40dp"
                android:src="@drawable/menujh"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="10dp"/>
    </LinearLayout>
        </LinearLayout>
</LinearLayout>